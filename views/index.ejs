<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Blog | <%= title %>
    </title>
</head>

<body>
    <nav>
        <div class="site-title">
            <a href="/">Blog</a>
            <p>A Blog Site</p>
        </div>
        <ul>
            <li><a href="/">Blogs</a></li>
            <li><a href="/about">About</a></li>
            <li><a href="/blogs/create">New Blog</a></li>
        </ul>
    </nav>

    <div class="blogs-content">
        <h2>All blogs</h2>

        <% if (blogs.length>0){ %>
            <% blogs.forEach(blog=> { %>
                <h3 class="title">
                    <%= blog.title %>
                </h3>
                <p class="snippet">
                    <%= blog.snippet %>
                </p>
                <% }) %>
                    <% } else {%>
                        <p>No blogs to display</p>
                        <% } %>
    </div>
</body>

</html>